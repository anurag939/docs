Program12.py
-------------
#tuple is used to create a list which you don't want to change
#if you want to change tuple change it to list then change it back to tuple

pi_tuple = (3,1,4,1,5,9)

new_tuple = list(pi_tuple)

new_list = tuple(new_tuple)


print("tuple:")
print(len(new_tuple))
print(min(new_tuple))
print(max(new_tuple))
print("list:")
print(len(new_list))
print(min(new_list))
print(max(new_list))

Program13.py
-------------
import random
import sys
import os

pairs1 = {'flower':'rose',
          'fruit':'apple',
          'tree':'banyan',
          'building material':'cement'}

print(pairs1['flower'])

print(len(pairs1))

del(pairs1['building material'])

pairs1['tree'] = 'babool'

print(pairs1['tree'])

print(len(pairs1))

print(pairs1.get('fruit'))

print(pairs1.keys())

print(pairs1.values())


